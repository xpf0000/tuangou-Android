<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/city_gray"
    >
    <RelativeLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#fc4d48"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@drawable/jt"
            android:id="@+id/back"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商家详情"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/search"
            android:id="@+id/search"
            android:padding="5dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layouts"
        android:orientation="vertical"
        android:layout_below="@id/lin1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ListView
            android:id="@+id/shopinfo"
            android:layout_width="fill_parent"

            android:background="@color/city_gray"
            android:listSelector="#00000000"
            android:layout_marginBottom="10dp"
            android:paddingBottom="60dp"
            android:layout_height="fill_parent">
        </ListView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/lv"
            android:background="@color/city_gray"
            android:orientation="horizontal"
            >
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/dong"
                android:layout_gravity="center_vertical"
                android:background="@color/white"
                android:scrollbars="none" >
                <LinearLayout
                    android:id="@+id/id_gallery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal" >
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="首页"
                            android:textSize="18sp"
                            android:textColor="@color/red"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao1"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商家介绍"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao2"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="商家相册"
                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao3"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="新闻资讯"

                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao5"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="活动优惠"

                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao4"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="热卖商品"

                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />
                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao6"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="网友点评"

                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="90dp"
                        android:layout_height="60dp"
                        android:id="@+id/dao7"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="在线预订"

                            android:textSize="18sp"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                    </RelativeLayout>
                </LinearLayout>
            </HorizontalScrollView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="6"
                android:id="@+id/gundong"
                android:layout_marginLeft="1dp"
                android:background="@color/white"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrowl"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"

                    />

            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="horizontal"
        android:weightSum="0"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/xi"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="喜欢"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:id="@+id/xihuan"
                android:drawableTop="@drawable/bottom_icon01"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/shoucang"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="收藏"
                android:textColor="@color/black"
                android:id="@+id/shou"
                android:textSize="16sp"
                android:drawableTop="@drawable/bottom_icon02"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/yuedian"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="约店"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableTop="@drawable/bottom_icon03"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/fenxiang"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="分享"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableTop="@drawable/bottom_icon04"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:id="@+id/xiepingl"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:text="写评论"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:drawableTop="@drawable/bottom_icon05"
                />

        </RelativeLayout>
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
