<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/grarys"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="#fc4d48"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/logn_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/jt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="商品评价"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>
    <RelativeLayout
        android:padding="10dp"
        android:background="@color/white"
       android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/prologo"
            android:layout_width="100dp"
            android:scaleType="fitXY"
            android:background="@drawable/nopic2"
            android:layout_height="100dp" />
        <TextView
            android:id="@+id/title"
            android:text="@string/about"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/prologo"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/money"
            android:text="@string/about"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/prologo"
            android:layout_below="@id/title"
            android:textColor="@color/red"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <EditText
        android:id="@+id/edcon"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:paddingTop="5dp"
        android:hint="请输入您的评论最多500个字哦"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:maxLength="500"
        android:gravity="top"
        android:layout_height="80dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="15dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="评价星级："
            android:textColor="@color/black"
            android:textSize="18sp" />

        <RatingBar
            android:id="@+id/ratingbar"
            style="@style/discussRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:numStars="5"
            android:paddingLeft="1dp"
            android:rating="5"
            android:stepSize="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:text="上传照片:"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <com.hkkj.csrx.myview.MyGridView
            android:id="@+id/photos"
            android:numColumns="5"
            android:horizontalSpacing="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.hkkj.csrx.myview.MyGridView>
    </LinearLayout>
    <Button
        android:id="@+id/login"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/login_btn2"
        android:text="提交评论"
        android:textColor="@color/white" />
</LinearLayout>