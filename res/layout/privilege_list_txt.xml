<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/priliegettttt"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="5dp" >

    <ImageView
        android:id="@+id/privile_list_img"
        android:layout_width="100dp"
        android:layout_height="75dp"

        android:layout_gravity="center_vertical"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/privile_list_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="迪欧咖啡北环路店"
            android:textSize="17sp" />

      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="match_parent"
          android:layout_height="wrap_content">
          <TextView
              android:id="@+id/privile_list_txtadd"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginLeft="5dp"
              android:layout_marginTop="5dp"
              android:lines="1"
              android:maxEms="8"
              android:ellipsize="end"
              android:text="迪奥咖啡"
              android:layout_weight="1"
              android:textColor="@color/gray"
              android:textSize="15sp" />
          <TextView
              android:id="@+id/txt_shop_item_appe"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_below="@id/rating_shop_item"
              android:layout_marginRight="10dp"
              android:layout_marginTop="7dp"
              android:layout_alignParentRight="true"
              android:textColor="#a1a1a1"
              android:textSize="11sp" />
      </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:text="有效期："
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/privile_list_txttim"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:lines="1"
                android:text="有效期："
                android:textColor="@color/gray"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>