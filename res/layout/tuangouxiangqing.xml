                android:layout_height="wrap_content"
                android:id="@+id/web1"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
            </WebView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:id="@+id/geshu"
                    android:text="用户评价（0）"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/ping"
                android:visibility="gone"
                >
                <RatingBar
                    android:id="@+id/ratingBar"
                    style="@style/roomRatingBar"
                    android:numStars="5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/tou"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/my_face_icon"
                    android:layout_marginTop="8dp"
                    />
                <LinearLayout
                    android:id="@+id/user"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tou"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="遇见洛阳"
                        android:textColor="@color/royalblue"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/shijian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2012-1-1"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/grarytxt"
                        android:textSize="12sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tou"
                    android:id="@+id/pinglun"
                    android:layout_marginLeft="55dp"
                    android:text="老板是好人啊啊啊"
                    android:textSize="16sp"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginBottom="10dp"
                    />
                <com.X.tcbj.myview.MyGridView
                    android:id="@+id/comimglist"
                    android:layout_width="fill_parent"
                    android:layout_below="@id/pinglun"
                    android:verticalSpacing="10dp"
                    android:horizontalSpacing="10dp"
                    android:layout_marginLeft="55dp"
                    android:numColumns="3"
                    android:columnWidth="80dp"
                    android:stretchMode="columnWidth"
                    android:layout_height="wrap_content">
                </com.X.tcbj.myview.MyGridView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/huifu"
                    android:visibility="gone"
                    android:layout_below="@id/comimglist"
                    android:layout_marginLeft="5dp"
                    ></TextView>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:id="@+id/ping1"
                android:layout_marginTop="1dp"
                android:visibility="gone"
                >
                <RatingBar
                    android:id="@+id/ratingBar1"
                    style="@style/roomRatingBar"
                    android:numStars="5"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/tou1"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/my_face_icon"
                    android:layout_marginTop="8dp"
                    />

                <LinearLayout
                    android:id="@+id/user1"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:layout_toRightOf="@id/tou1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="遇见洛阳"
