<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/city_gray"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/red"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jt"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="团购详情"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="250dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:id="@+id/tu"
                    android:background="@drawable/nopic03"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:id="@+id/touming"
                    android:layout_alignParentBottom="true"
                    android:background="@color/touming"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shi"
                        android:background="@drawable/tuantime"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="8dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="剩余时间:"
                        android:id="@+id/zi"
                        android:layout_toRightOf="@id/shi"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="5dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="38天19小时1分"
                        android:id="@+id/shijia"
                        android:textSize="18sp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:layout_toRightOf="@id/zi"
                        android:layout_marginLeft="3dp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/fenxiang"
                        android:background="@drawable/shopshare"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="8dp"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/shoucang"
                        android:background="@drawable/shopcol"
                        android:layout_toLeftOf="@id/fenxiang"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        />
                </RelativeLayout>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/biaoti"
                    android:text="人生巅峰的餐厅你懂得"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="人生巅峰的餐厅你懂得我们可以提供免费的一切一切你懂得"
                    android:textSize="15sp"
                    android:textColor="@color/grarytxt"
                    android:id="@+id/jieshao"
                    android:layout_below="@id/biaoti"
                    android:lines="1"
                    android:ellipsize="end"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="1dp"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥88"
                    android:id="@+id/qian"
                    android:layout_marginLeft="10dp"
                    android:textSize="25sp"
                    android:textColor="@color/red"
                    android:layout_centerVertical="true"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥188"
                    android:textColor="@color/grarytxt"
                    android:id="@+id/jiuqian"
                    android:layout_alignBottom="@id/qian"
                    android:layout_toRightOf="@id/qian"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/qiang"
                    android:layout_alignParentRight="true"
                    android:text="立即抢购"
                    android:textSize="20sp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/trialbutton"
                    android:gravity="center"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tuan"
                    android:background="@drawable/tuannumber"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="已售:"
                    android:textColor="@color/grarytxt"
                    android:id="@+id/yishou"
                    android:layout_toRightOf="@id/tuan"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="5dp"
                    android:textSize="15sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shu"
                    android:layout_toRightOf="@id/yishou"
                    android:layout_marginLeft="3dp"
                    android:textSize="15sp"
                    android:text="1289"
                    android:textColor="@color/grarytxt"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="商家信息"
                    android:textColor="@color/grarytxt"
                    android:textSize="18sp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:layout_weight="0"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/mingzi"
                        android:text="人生巅峰餐厅"
                        android:textSize="16sp"
                        android:lines="1"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mingzi"
                        android:id="@+id/dizhi"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:lines="1"
                        android:textColor="@color/grarytxt"
                        android:ellipsize="end"
                        android:text="王城大道沙场路交叉扣8888号"
                        />
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/dizhi"
                        android:id="@+id/i"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/tuanset"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5.0km"
                        android:id="@+id/juli"
                        android:layout_toRightOf="@id/i"
                        android:layout_below="@id/dizhi"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="离我很近"
                        android:layout_toRightOf="@id/juli"
                        android:textColor="@color/red"
                        android:layout_below="@id/dizhi"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="3dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@color/white"
                    android:layout_marginLeft="1dp"
                    android:layout_marginTop="1dp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/dianhua"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/tuantel"
                        />
                </RelativeLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                >
                <TextView
