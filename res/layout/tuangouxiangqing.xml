                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/huifu1"
                    android:visibility="gone"
                    android:layout_below="@id/comimglist1"
                    android:layout_marginLeft="5dp"
                    ></TextView>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="1dp"
                android:id="@+id/kan"
                android:visibility="gone"
                android:background="@color/white"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/kanpingjia"
                    android:background="@drawable/shop_button"
                    android:layout_centerVertical="true"
                    android:layout_centerHorizontal="true"
                    android:text="查看全部评价"
                    android:textSize="12sp"
                    android:gravity="center"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/white"
                android:layout_marginTop="20dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_centerVertical="true"
                    android:textSize="18sp"
                    android:text="猜你喜欢"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:id="@+id/caini"
                android:visibility="gone"
                android:background="@color/white"
                android:layout_marginTop="1dp"
                >
                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:id="@+id/caitu"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/nopic03"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="天子顶级足浴"
                    android:id="@+id/dianname"
                    android:textSize="18sp"
                    android:layout_toRightOf="@id/caitu"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/black"
                    android:ellipsize="end"
                    android:lines="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/caitu"
                    android:layout_marginTop="5dp"
                    android:id="@+id/miaoshu"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/grarytxt"
                    android:layout_below="@id/dianname"
                    android:textSize="15sp"
                    android:text="仅售188，你没有看错只售188!"
                    android:ellipsize="end"
                    android:lines="1"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/ju"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:text="100km"
                    android:textColor="@color/grarytxt"
                    android:layout_alignBottom="@id/dianname"
                    android:textSize="12sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/huodongjia"
                    android:layout_toRightOf="@id/caitu"
                    android:layout_alignBottom="@id/caitu"
                    android:text="￥79"
                    android:layout_marginLeft="10dp"
                    android:textSize="18sp"
                    android:textColor="@color/red"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/zhenshijia"
                    android:layout_toRightOf="@id/huodongjia"
                    android:textColor="@color/grarytxt"
                    android:layout_alignBottom="@id/huodongjia"
                    android:textSize="12sp"
                    android:text="￥100"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/maishu"
                    android:layout_alignParentRight="true"
                    android:layout_alignBottom="@id/huodongjia"
                    android:layout_marginRight="10dp"
                    android:textSize="15sp"
