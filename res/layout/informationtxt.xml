<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gridback"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/infor_list_img"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginLeft="5dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:background="@drawable/head" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/infor_list_txt"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:singleLine="true"
            android:text="迪欧咖啡北环路店"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/infor_list_txtadd"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:lines="2"
            android:text="迪奥咖啡啊啊啊啊啊"
            android:lineSpacingExtra="7dp"
            android:textColor="@color/gray"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right" >

            <TextView
                android:id="@+id/infor_list_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="10dp"
                android:drawableLeft="@drawable/bbs_view"
                android:textColor="@color/gray"
                android:text="@string/about"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>