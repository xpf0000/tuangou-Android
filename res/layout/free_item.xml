<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <ImageView
            android:id="@+id/salimg"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:background="@drawable/nopic03" />

        <ImageView
            android:id="@+id/statimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/indexstateend" />

        <TextView
            android:id="@+id/title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/salimg"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:lines="1"
            android:text="aaaa"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/title"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="距离结束"
                android:textColor="@color/gray"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text=">1000"
                android:textColor="@color/red"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/riqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="天"
                android:textColor="@color/red"
                android:textSize="12sp" />

            <Button
                android:id="@+id/shenqing"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:background="@drawable/indexbutton"
                android:padding="5dp"
                android:text="申请试用"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>