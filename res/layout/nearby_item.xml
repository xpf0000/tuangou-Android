    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="0.8dp"-->
    <!--android:layout_below="@id/img_shop_item_picture"-->
    <!--android:layout_marginTop="10dp"-->
    <!--android:background="@color/grey" />-->

</RelativeLayout>