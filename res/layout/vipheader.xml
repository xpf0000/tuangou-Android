    <LinearLayout
        android:id="@+id/dian"
        android:layout_width="fill_parent"
        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        >
    </LinearLayout>

    </LinearLayout>
</RelativeLayout>