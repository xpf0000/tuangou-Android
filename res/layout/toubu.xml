<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:layout_marginTop="10dp"
    android:background="@color/city_gray"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    >
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:background="@color/white"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginBottom="10dp"
    >
    <ImageView
        android:id="@+id/logo"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/head" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/ziname"
            android:layout_width="120dp"
            android:lines="1"
            android:textSize="18sp"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:text="迪奥咖啡北环路店" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/myRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dip"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4" />

        <TextView
            android:id="@+id/shangquan"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="迪奥咖啡北环路店"
            android:textSize="12sp" />

    </LinearLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/fang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/vip_icon01"
        />

    <ImageView
        android:id="@+id/ka"
        android:layout_toRightOf="@id/fang"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/card" />

    <ImageView
        android:id="@+id/jian"
        android:layout_toRightOf="@id/ka"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/recommend" />

    <ImageView
        android:id="@+id/v"
        android:layout_toRightOf="@id/jian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/vip" />

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
       android:layout_alignParentBottom="true"
       android:layout_alignParentRight="true"
       android:lines="1"
       android:ellipsize="end"
      android:layout_marginRight="10dp"
       android:id="@+id/juli"
       />
</RelativeLayout>
</LinearLayout>
</LinearLayout>