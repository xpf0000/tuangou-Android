<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grarys"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/shopname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:ellipsize="end"
            android:lines="1"
            android:maxEms="10"
            android:text="洛阳你洛阳你"
            android:textSize="17sp" />
        <ImageView
            android:id="@+id/recom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/shopname"
            android:paddingLeft="5dp"
            android:src="@drawable/vip_icon01" />
        <ImageView
            android:id="@+id/recommend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/recom"
            android:paddingLeft="5dp"
            android:src="@drawable/recommend" />

        <ImageView
            android:id="@+id/vip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/recommend"
            android:paddingLeft="5dp"
            android:src="@drawable/vip" />

        <ImageView
            android:id="@+id/card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/vip"
            android:paddingLeft="5dp"
            android:src="@drawable/card" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingLeft="5dp"
            android:src="@drawable/arrowl" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/shopimg"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/nopic03" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="综合评分："
            android:textSize="17sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/myRatingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/txt"
            android:numStars="5" />

        <Button
            android:id="@+id/share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/share"
            android:text="分享"
            android:textColor="@color/white" />
        <Button
            android:id="@+id/collect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/share"
            android:background="@drawable/collect"
            android:text="收藏"
            android:textColor="@color/white" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/bg_blue">
        <ImageView
            android:id="@+id/call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/blue_position" />
        <ImageView
            android:id="@+id/calls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/call"
            android:src="@drawable/blue_phone" />
        <TextView
            android:id="@+id/adress"
            android:text="西贡区"
            android:lines="1"
            android:layout_marginTop="17dp"
            android:ellipsize="end"
            android:layout_toRightOf="@+id/call"
            android:layout_marginLeft="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/number"
            android:text="西贡区"
            android:lines="1"
            android:ellipsize="end"
            android:layout_below="@id/call"
            android:layout_toRightOf="@+id/calls"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>

        <RelativeLayout
            android:id="@+id/txt2"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/bg_red"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/t1"
                android:text="优"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="13dp"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <TextView
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingBottom="10dp"
                android:paddingTop="13dp"
                android:layout_below="@id/t1"
                android:text="惠" />
            <TextView
                android:id="@+id/protxt"
                android:text="西贡区"
                android:lines="1"
                android:textColor="@color/red"
                android:layout_marginTop="17dp"
                android:ellipsize="end"
                android:layout_toRightOf="@+id/t1"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:text="点击查看更多优惠"
                android:lines="1"
                android:ellipsize="end"
                android:layout_below="@id/t1"
                android:layout_toRightOf="@+id/t2"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    <LinearLayout
        android:id="@+id/Shopdate"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="查看商家详情"
            android:layout_width="fill_parent"
            android:textColor="@color/red"
            android:gravity="center"
            android:padding="10dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shopbg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/txt1"
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/headtxt"
                android:text="商家相册"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_alignParentRight="true"
                android:background="@drawable/comment"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlay"
            android:visibility="gone"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@color/greyy"
            android:layout_below="@id/txt1"
            android:layout_marginTop="-5dp"
            android:layout_height="0.5dp">
        </LinearLayout>
        <com.X.tcbj.myview.MyGridView
            android:id="@+id/shopalbum"
            android:verticalSpacing="10dp"
            android:horizontalSpacing="10dp"
            android:numColumns="2"
            android:visibility="gone"
            android:columnWidth="80dp"
            android:listSelector="@drawable/grid_select"
            android:stretchMode="columnWidth"
            android:layout_width="fill_parent"
            android:layout_below="@+id/linlay"
            android:layout_height="wrap_content">
        </com.X.tcbj.myview.MyGridView>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shopbg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/txt3"
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:text="用户评论"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:id="@+id/mycollect"
                android:text="我要评论"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:background="@drawable/comment"
                android:layout_width="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linlay3"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@color/greyy"
            android:layout_below="@id/txt3"
            android:layout_marginTop="-5dp"
            android:layout_height="0.5dp">
        </LinearLayout>
        <com.X.tcbj.myview.MyListView
            android:id="@+id/shopcoment"
            android:layout_width="fill_parent"
            android:layout_below="@+id/linlay3"
            android:layout_height="wrap_content">
        </com.X.tcbj.myview.MyListView>
        <LinearLayout
            android:id="@+id/linlay4"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@color/greyy"
            android:layout_below="@id/shopcoment"
            android:layout_height="0.5dp"></LinearLayout>
        <TextView
            android:id="@+id/comnum"
            android:text="查看全部评论"
            android:textColor="@color/red"
            android:gravity="center"
            android:layout_below="@id/linlay4"
            android:padding="10dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/shopbg"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/txt4"
            android:layout_margin="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:text="附近商家"
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_alignParentRight="true"
                android:background="@drawable/comment"
                android:layout_width="wrap_content"
                android:visibility="invisible"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_alignParentRight="true"
                android:src="@drawable/arrowl"
                android:layout_marginTop="2dp"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:background="@color/greyy"
            android:layout_below="@id/txt4"
            android:layout_marginTop="-5dp"
            android:layout_height="0.5dp">
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>