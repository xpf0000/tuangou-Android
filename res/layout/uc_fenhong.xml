<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/APPPGBG"
    android:orientation="vertical"
    tools:context=".CityListsActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:background="@color/app_basic"
        android:orientation="horizontal" >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="我的分红"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/info_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/jt"
            android:clickable="true"
            android:onClick="back"
            />


    </RelativeLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/APPPGBG"
        android:layout_weight="1"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="12dp"
            >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="16dp"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/uc_units_icon0"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="累计分红"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/APPTXTBlack"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/uc_fenhong_money_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="right"
                    />

                <ImageView
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/arrowl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:layout_marginTop="1dp"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/uc_units_icon0"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="消费分红"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/APPTXTBlack"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/uc_fenhong_xiaofei"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="right"
                    />

                <ImageView
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/arrowl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:layout_marginTop="1dp"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/uc_units_icon0"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="推荐会员分红"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/APPTXTBlack"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/uc_fenhong_tjuser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="right"
                    />

                <ImageView
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/arrowl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/white"
                android:paddingLeft="16dp"
                android:layout_marginTop="1dp"
                >

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/uc_units_icon0"
                    />

                <TextView
                    android:layout_marginLeft="10dp"
                    android:text="推荐商家分红"
                    android:gravity="left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/APPTXTBlack"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/uc_fenhong_tjshop"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="8dp"
                    android:text=""
                    android:textColor="#999999"
                    android:textSize="16sp"
                    android:gravity="right"
                    />

                <ImageView
                    android:layout_gravity="right|center_vertical"
                    android:src="@drawable/arrowl"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/APPTXTBlack"
                android:textSize="18sp"
                android:text="规则说明"
                android:padding="14dp"
                />

            <WebView
                android:id="@+id/uc_fenhong_web"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                >

            </WebView>

        </LinearLayout>
    </ScrollView>


</LinearLayout>

