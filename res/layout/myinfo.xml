<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/APPPGBG"
    android:orientation="vertical"
    tools:context=".CityListsActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="10"
        android:background="@color/app_basic"
        android:orientation="horizontal" >



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:text="@string/info"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/info_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/jt" />

         <Button
            android:text="保存"
            android:background="@null"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
             android:textColor="#ffffff"
             android:textSize="16sp"
            android:layout_width="80dp"
            android:layout_height="30dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:onClick="do_save"
            />
    </RelativeLayout>
 <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        >

     <LinearLayout
         android:layout_marginTop="12dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="vertical"
         android:background="#ffffff"
         >
         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:background="@color/white"
             >
             <TextView
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:text="@string/head"
                 android:layout_width="70dp"
                 android:gravity="right"
                 android:layout_height="wrap_content"
                 />

             <TextView
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:layout_weight="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />

             <ImageView
                 android:id="@+id/myinfo_head"
                 android:scaleType="centerCrop"
                 android:cropToPadding="true"
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:background="@drawable/head"
                 android:layout_marginTop="10dp"
                 android:layout_marginBottom="10dp"
                 android:layout_width="60dp"
                 android:layout_height="60dp"
                 android:clickable="true"
                 android:onClick="chooseImg"
                 />
             <ImageView
                 android:layout_gravity="right|center_vertical"
                 android:src="@drawable/arrowl"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#ffffff"
             android:orientation="horizontal"
             android:paddingLeft="@dimen/app_separator_offx"
             android:paddingRight="@dimen/app_separator_offx"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#eeeeee"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:background="@color/white"
             >
             <TextView
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:text="手机号"
                 android:gravity="right"
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 />

             <TextView
                 android:id="@+id/myinfo_tel"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingLeft="12dp"
                 android:paddingRight="12dp"
                 android:text="17719226070"
                 android:gravity="right"
                 />

             <ImageView
                 android:layout_gravity="right|center_vertical"
                 android:src="@drawable/arrowl"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#ffffff"
             android:orientation="horizontal"
             android:paddingLeft="@dimen/app_separator_offx"
             android:paddingRight="@dimen/app_separator_offx"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#eeeeee"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:background="@color/white"
             >
             <TextView
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:text="姓名"
                 android:gravity="right"
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 />

             <TextView
                 android:id="@+id/myinfo_name"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingLeft="12dp"
                 android:paddingRight="12dp"
                 android:text="名字"
                 android:gravity="right"
                 />

             <ImageView
                 android:layout_gravity="right|center_vertical"
                 android:src="@drawable/arrowl"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#ffffff"
             android:orientation="horizontal"
             android:paddingLeft="@dimen/app_separator_offx"
             android:paddingRight="@dimen/app_separator_offx"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#eeeeee"/>

         </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:background="@color/white"
             >
             <TextView
                 android:layout_gravity="center_vertical|center_horizontal"
                 android:text="身份证号"
                 android:gravity="right"
                 android:layout_width="70dp"
                 android:layout_height="wrap_content"
                 />

             <TextView
                 android:id="@+id/myinfo_ids"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_weight="1"
                 android:paddingTop="16dp"
                 android:paddingBottom="16dp"
                 android:paddingLeft="12dp"
                 android:paddingRight="12dp"
                 android:text="412457878454547878"
                 android:gravity="right"
                 />

             <ImageView
                 android:layout_gravity="right|center_vertical"
                 android:src="@drawable/arrowl"
                 android:layout_marginLeft="10dp"
                 android:layout_marginRight="10dp"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 />
         </LinearLayout>
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="1dp"
             android:background="#ffffff"
             android:orientation="horizontal"
             android:paddingLeft="@dimen/app_separator_offx"
             android:paddingRight="@dimen/app_separator_offx"
             >

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="match_parent"
                 android:background="#eeeeee"/>

         </LinearLayout>

     </LinearLayout>



</LinearLayout>
</LinearLayout>