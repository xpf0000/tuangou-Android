<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"

        android:background="#fc4d48"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/comment_back"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginLeft="10dp"
            android:src="@drawable/jt" />

        <TextView   android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/mycomment"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:gravity="center"/>

        <Button
            android:id="@+id/btn_search_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="18dp"
            android:background="@drawable/search_my"
            android:focusable="false"/>
    </LinearLayout>
    <include layout="@layout/radio_btn_copy"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/ll_radiobtn"/>
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </FrameLayout>

</LinearLayout>